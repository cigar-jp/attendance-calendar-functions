{
  "manifest_version": 3,
  "icons": {
    "16": "link_icon.png",
    "48": "link_icon.png",
    "128": "link_icon.png"
  },
  "name": "ゲストモードリンク",
  "version": "1.0",
  "description": "指定したURLをゲストモード（インコグニートモード）で開きます。",
  "permissions": ["windows"],
  "background": {
    "service_worker": "index.js"
  },
  "action": {
    "default_title": "ゲストモードで開く",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "link_icon.png",
      "48": "link_icon.png",
      "128": "link_icon.png"
    }
  }
}
